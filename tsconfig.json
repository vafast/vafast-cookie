{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
